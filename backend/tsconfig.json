{
  "compilerOptions": {
    "outDir": "dist/",
    // "rootDir": "/backend",
    "moduleResolution": "node",
    "target": "ES2016",
    "allowJs": true,
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "/backend/public"]
}
